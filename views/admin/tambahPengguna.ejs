<%- include('../header');%>
<body>
  <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <!-- Menu Navigasi Side-->
      <%- include('menuNav');%>
      <!-- End Menu Navigasi Side-->
      <!-- Menu Navigasi Side-->
      <%- include('topNavBar');%>
      <!-- End Menu Navigasi Side-->
      <!-- Content wrapper -->
    <div class="content-wrapper">
      <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Tambah /</span> Pengguna</h4>

              <div class="row">
                <div class="col-md-12">
                  <ul class="nav nav-pills flex-column flex-md-row mb-3">
                    <li class="nav-item">
                      <a class="nav-link active" href="javascript:void(0);"><i class="bx bx-user me-1"></i> Akun</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="pages-account-settings-notifications.html"
                        ><i class="bx bx-bell me-1"></i> Notifications</a
                      >
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="pages-account-settings-connections.html"
                        ><i class="bx bx-link-alt me-1"></i> Connections</a
                      >
                    </li>
                  </ul>
                  <div class="card mb-4">
                    <h5 class="card-header">Detail Profil</h5>
                    <!-- Account -->
                    <div class="card-body">
                      <div class="d-flex align-items-start align-items-sm-center gap-4">
                        <img
                          src="<%= fotoProfil%>"
                          alt="user-avatar"
                          class="d-block rounded"
                          height="100"
                          width="100"
                          id="uploadedAvatar"
                        />
                        <div class="button-wrapper">
                          <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                            <span class="d-none d-sm-block">Upload Foto Baru</span>
                            <i class="bx bx-upload d-block d-sm-none"></i>
                            <input
                              type="file"
                              id="upload"
                              class="account-file-input"
                              hidden
                              accept="image/png, image/jpeg"
                            />
                          </label>
                          <button type="button" class="btn btn-outline-secondary account-image-reset mb-4">
                            <i class="bx bx-reset d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Reset</span>
                          </button>

                          <p class="text-muted mb-0">Allowed JPG, GIF or PNG. Max size of 800K</p>
                        </div>
                      </div>
                    </div>
                    <hr class="my-0" />
                    <% if (messages.error) { %>
                      <div class="alert alert-danger" role="alert"><%- messages.error %></div>
                      <% } %>
                    <div class="card-body">
                      <form id="formAccountSettings" method="POST" action="/simpanPengguna" onsubmit="return">
                        <div class="row">
                          <div class="mb-3 col-md-6">
                            <label for="namaLengkap" class="form-label">Nama Lengkap</label>
                            <input
                              class="form-control"
                              type="text"
                              id="namaLengkap"
                              name="namaLengkap"
                              value="<%= namaLengkap%>"
                              placeholder="Silahkan Masukan Data"
                              autofocus
                            />
                          </div>
                          <div class="mb-3 col-md-6">
                            <label for="Gelar" class="form-label">Gelar</label>
                            <input class="form-control" type="text" name="gelar" id="gelar" value="<%= gelar%>" placeholder="Silahkan Masukan Data" />
                          </div>
                          <div class="mb-3 col-md-6">
                            <label for="email" class="form-label">E-mail</label>
                            <input
                              class="form-control"
                              type="text"
                              id="email"
                              name="email"
                              value="<%= email%>"
                              placeholder="Silahkan Masukan Data"
                            />
                          </div>
                          <div class="mb-3 col-md-6">
                            <label for="jabatan" class="form-label">Jabatan/Sebagai</label>
                            <input
                              type="text"
                              class="form-control"
                              id="jabatan"
                              name="jabatan"
                              value="<%= jabatan%>"
                              placeholder="Silahkan Masukan Data"
                            />
                          </div>
                          <div class="mb-3 col-md-6">
                            <label class="form-label" for="nomorTelepon">Nomor Telepon</label>
                            <div class="input-group input-group-merge">
                              <span class="input-group-text">ID (+62)</span>
                              <input
                                type="text"
                                id="nomorTelepon"
                                name="nomorTelepon"
                                value="<%= nomorTelepon%>"
                                class="form-control"
                                placeholder="Silahkan Masukan Data"
                              />
                            </div>
                          </div>
                          <div class="mb-3 col-md-6">
                            <label for="alamatRumah" class="form-label">Alamat</label>
                            <input type="text" class="form-control" id="alamatRumah" name="alamatRumah" value="<%= alamatRumah%>" placeholder="Silahkan Masukan Data" />
                          </div>
                          <div class="mb-3 col-md-6">
                            <label for="alamatKota" class="form-label">Kota</label>
                            <input class="form-control" type="kota" id="alamatKota" name="alamatKota" value="<%= alamatKota%>" placeholder="Silahkan Masukan Data" />
                          </div>
                          <div class="mb-3 col-md-6">
                            <label for="kodePosRumah" class="form-label">Kode Pos</label>
                            <input
                              type="text"
                              class="form-control"
                              id="kodePosRumah"
                              name="kodePosRumah"
                              value="<%= kodePosRumah%>"
                              placeholder="Silahkan Masukan Data"
                              maxlength="6"
                            />
                          </div>
                          <div class="mb-3 col-md-6">
                            <label class="form-label" for="kebangsaan">Kebangsaan</label>
                            <input
                              type="text"
                              class="form-control"
                              id="kebangsaan"
                              name="kebangsaan"
                              value="<%= kebangsaan%>"
                              placeholder="Silahkan Masukan Data"
                            />
                          </div>
                          <div class="mb-3 col-md-6">
                            <label class="form-label" for="tempatLahir">Tempat Lahir</label>
                            <input
                              type="text"
                              class="form-control"
                              id="tempatLahir"
                              name="tempatLahir"
                              value="<%= tempatLahir%>"
                              placeholder="Silahkan Masukan Data"
                            />
                          </div>
                          <div class="mb-3 col-md-6">
                            <label class="form-label" for="tanggalLahir">Tanggal Lahir</label>
                            <input
                              type="text"
                              class="form-control"
                              id="tanggalLahir"
                              name="tanggalLahir"
                              value="<%= tanggalLahir%>"
                              placeholder="Silahkan Masukan Data"
                            />
                          </div>
                          <div class="mb-3 col-md-6">
                            <label class="form-label" for="usia">Usia</label>
                            <input
                              type="text"
                              class="form-control"
                              id="usia"
                              name="usia"
                              value="<%= usia%>"
                              placeholder="Silahkan Masukan Data"
                            />
                          </div>
                          <div class="mb-3 col-md-6">
                            <label class="form-label" for="username">Username</label>
                            <input
                              type="text"
                              class="form-control"
                              id="username"
                              name="username"
                              value="<%= username%>"
                              placeholder="Silahkan Masukan Data"
                            />
                          </div>
                          <div class="mb-3 col-md-6">
                            <label class="form-label" for="password">Password</label>
                            <input
                              type="password"
                              class="form-control"
                              id="password"
                              name="password"
                              value="<%= password%>"
                              placeholder="Silahkan Masukan Data"
                            />
                          </div>
                        </div>
                        <div class="mt-2">
                          <button type="submit" class="btn btn-primary me-2">Save changes</button>
                          <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                        </div>
                      </form>
                    </div>
                    <!-- /Account -->
                  </div>
                </div>
              </div>
            </div>
            <!-- / Content -->
<%- include('../footer');%>