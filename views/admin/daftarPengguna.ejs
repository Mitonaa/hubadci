<%- include('../header');%>
<body>
  <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <!-- Menu Navigasi Side-->
      <%- include('menuNav');%>
      <!-- End Menu Navigasi Side-->
      <!-- Menu Navigasi Side-->
      <%- include('topNavBar');%>
      <!-- End Menu Navigasi Side-->
      <!-- Content wrapper -->
    <div class="content-wrapper">
      <!-- Content -->
      <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Data Pengguna /</span> <%= jenisPengguna %></h4>
        <!-- Contextual Classes -->
        <div class="card">
          <h5 class="card-header">Daftar <%= jenisPengguna %></h5>
          <div class="table-responsive text-nowrap">
            <table class="table">
              <caption class="ms-4">
                <!-- Untuk Halaman Pagination -->
                <a href="/tambahPengguna"><span class="badge bg-label-primary me-1">Tambah Data</span></a>
                <a href="#" data-bs-toggle="modal" data-bs-target="#modalCenter"><span class="badge bg-label-success me-1">Unggah Data</span></a>
                <!-- Modal -->
                        <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="modalCenterTitle">Unggah Data <%= jenisPengguna%>.csv</h5>
                                <button
                                  type="button"
                                  class="btn-close"
                                  data-bs-dismiss="modal"
                                  aria-label="Close"
                                ></button>
                              </div>
                              <div class="modal-body">
                                <div class="row">
                                  <div class="col mb-3">
                                    <label for="nameWithTitle" class="form-label">Pilih Berkas CSV Data</label>
                                  </div>
                                </div>
                                
                                <div class="input-group">
                                  <form action="/unggahPengguna" method="post" enctype="multipart/form-data">
                                  <input
                                    type="file"
                                    class="form-control"
                                    id="inputGroupFile04"
                                    aria-describedby="inputGroupFileAddon04"
                                    aria-label="Upload"
                                    accept="csv"
                                    name="import-csv"
                                  />
                                  <button class="btn btn-outline-primary" type="reset" id="inputGroupFileAddon04">Reset</button>
                                </div>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                  Close
                                </button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                              </div>
                            </form>
                            </div>
                          </div>
                        </div>
                      </div>        
              </caption>
              <thead>
                <tr>
                  <th><%= thSatu %></th>
                  <th><%= thDua %></th>
                  <th><%= thTiga %></th>
                  <th><%= thEmpat %></th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody class="table-border-bottom-0">
                <% if(data.length){              
                  for(var i = 0; i< data.length; i++) {%>
                <tr class="table-default">
                  <td><i class="fab fa-sketch fa-lg text-warning me-3"></i> <strong><%=data[i].namaLengkap +", "+ data[i].gelarPengguna%></strong></td>
                  <td><%= data[i].jabatanPengguna%></td>
                  <td><%= "(+62) "+data[i].nomorTelepon%></td>
                  <td><span class="badge bg-label-primary me-1">Active</span></td>
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="javascript:void(0);"
                          ><i class="bx bx-edit-alt me-1"></i> Edit</a
                        >
                        <a class="dropdown-item" href="javascript:void(0);"
                          ><i class="bx bx-trash me-1"></i> Delete</a
                        >
                      </div>
                    </div>
                  </td>
                </tr>
                <% }
                                    
              }else{ %>
                  <tr>
                      <td colspan="4">
                          <div class="alert alert-danger" role="alert">
                              Data Tidak Ditemukan !
                          </div>
                      </td>
                  </tr>
              <% } %>    
              </tbody>
            </table>
          </div>
        </div>
        <!--/ Contextual Classes -->
      </div>
      <!-- / Content -->
<%- include('../footer');%>